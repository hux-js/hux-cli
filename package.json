{
  "name": "@hux-js/cli",
  "version": "0.1.0",
  "description": "CLI tool for hux including API contract testing",
  "main": "dist/bundle.umd.min.js",
  "unpkg": "dist/bundle.umd.min.js",
  "scripts": {
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint --fix 'src/**/*.js'",
    "test:unit": "jest --config jest.config.js",
    "package": "rollup -c",
    "package-watch": "rollup -c --watch",
    "build": "npm run package",
    "prettier": "prettier --write '{src,bin}/**/*.js'"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.0",
    "rollup": "^2.33.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-preserve-shebangs": "^0.2.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "bin": {
    "hux": "dist/bundle.umd.min.js"
  },
  "lint-staged": {
    "{src,test}/**/*.js": [
      "npm run test:lint",
      "npm run prettier",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:unit"
    }
  },
  "author": "Todd Runham",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hux-js/hux-cli.git"
  },
  "homepage": "https://huxjs.org/",
  "keywords": [
    "contract",
    "testing",
    "api",
    "hux",
    "cli"
  ],
  "dependencies": {
    "ajv": "^6.12.6",
    "ajv-errors": "^1.0.1",
    "chalk": "^4.1.0",
    "commander": "^6.2.1",
    "node-fetch": "^2.6.1"
  },
  "files": [
    "dist/"
  ]
}
